{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "lib": ["es2020", "dom"],
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }, 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
